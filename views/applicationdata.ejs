<body>


    <h1>Application Data</h1>
        <a href="/"><button>Add User</button></a>

    <hr>


    <table border="1" cellspacing="0" cellpadding="10" style="width: 100%;">

        <tr>
            <th>SR No</th>
    
            <th> Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Position</th>
            <th>Resume</th>
            <th>Action</th>
            <th>Action</th>
        </tr>



        <%data.map((val,index)=>{ %>

            <tr>

                <td><%=index+1%></td>
              
                <td><%-val.username%></td>
                <td><%-val.useremail%></td>
                <td><%-val.usermobile%></td>
                <td><%-val.position%></td>
                <td><%-val.userresume%></td>
                <td onclick="return confirm('Are You Sure ? ')"><a href="/delete/<%-val.user_id%>"><button>Delete</button></a></td>
                <td><a href="/edit/<%-val.user_id%>"><button>Edit</button></a></td>
            </tr>

            <% })%>

    </table>

</body>

</html>